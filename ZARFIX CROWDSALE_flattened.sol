        address[] calldata users,
        uint256[] calldata statuses
    ) external onlyOwner {
        require(users.length == statuses.length, "Array length mismatch");
        
        for (uint256 i = 0; i < users.length; i++) {
            userStatus[users[i]] = statuses[i];
        }
    }
    
